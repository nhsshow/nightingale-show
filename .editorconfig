# EditorConfig is awesome: https://EditorConfig.org

root = true # top-most EditorConfig file

[*]
indent_style             = tab
indent_size              = 4
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true

[*.{md,yml}]
indent_style             = space

[*.{md,yml}]
indent_size              = 2

[*.md]
trim_trailing_whitespace = false
